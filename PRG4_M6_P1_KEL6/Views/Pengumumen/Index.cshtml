@model IEnumerable<PRG4_M6_P1_KEL6.Models.Pengumuman>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<div class="card-body">
    <h4 class="card-title">Data Pengumuman</h4>
    @*<p class="card-description">
    Add class <code>.table</code>
    </p>*@
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nama Pengumuman
                    </th>
                    <th>
                        Jenis Pengumuman
                    </th>
                    <th>
                        Isi Pengumuman
                    </th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NamaPengumuman)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JenisPengumuman)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsiPengumuman)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-rounded btn-fw">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-rounded btn-fw">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info btn-rounded btn-fw">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
