@model IEnumerable<PRG4_M6_P1_KEL6.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="card-body">
    <h4 class="card-title">Data Pengumuman</h4>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
    <div class="table-responsive">
        <table class="table">

            <thead>
                <tr>
                    <th>
                        Nama
                    </th>
                    <th>
                        Alamat
                    </th>
                    <th>
                        NoTelp
                    </th>
                    <th>
                        Status
                    </th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nama)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Alamat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoTelp)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id"><i class="mdi mdi-lead-pencil"></i></a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="mdi mdi-information"></i></a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="mdi mdi-cup"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>