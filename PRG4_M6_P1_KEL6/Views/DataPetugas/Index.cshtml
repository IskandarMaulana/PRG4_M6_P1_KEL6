@model IEnumerable<PRG4_M6_P1_KEL6.Models.DataPetuga>

@{
    ViewData["Title"] = "Petugas";
}

<h2>Dashboard > Petugas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="card-body">
    <h4 class="card-title">Data Petugas</h4>
    @*<p class="card-description">
    Add class <code>.table</code>
    </p>*@
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        NIM
                    </th>
                    <th>
                        Nama
                    </th>
                    <th>
                        Prodi
                    </th>
                    <th>
                        Nomor Telepon
                    </th>
                    <th>
                        Status
                    </th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nama)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prodi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoTelp)
                        </td>
                        <td>
                            @if (item.Status == 0)
                            {
                                <p>Tidak Aktif</p>
                            }
                            else if (item.Status == 1)
                            {
                                <p>Aktif</p>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Nim" class="btn btn-secondary btn-rounded btn-fw"><i class="fa fa-pencil-square"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Nim" class="btn btn-info btn-rounded btn-fw"><i class="fa fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Nim" class="btn btn-danger btn-rounded btn-fw"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
